<Window x:Class="Courswork.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить игру" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название игры:" Margin="0,0,0,5"/>
            <TextBox Name="TitleTextBox" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Описание игры:" Margin="0,0,0,5"/>
            <TextBox Name="DescriptionTextBox" Width="300" Height="60" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Возрастная группа:" Margin="0,0,0,5"/>
            <TextBox Name="AgeGroupTextBox" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Категория игры:" Margin="0,0,0,5"/>
            <ComboBox Name="CategoryComboBox" Width="300" Margin="0,0,0,10" DisplayMemberPath="CategoryName"/>

            <Button Content="Добавить" Click="AddGame_Click" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
